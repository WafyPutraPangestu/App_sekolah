<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col">
    <%- include('../partials/header') %>

    <main class="flex-grow">
      <!-- Hero Slider Section -->
      <div x-data="slider()" x-init="init()" class="relative w-full overflow-hidden">
        <!-- Slides Container -->
        <div class="relative h-[500px] md:h-[500px]">
          <!-- Slide 1 -->
          <div x-show="currentSlide === 0" 
               x-transition:enter="transition ease-out duration-500"
               x-transition:enter-start="opacity-0"
               x-transition:enter-end="opacity-100"
               class="absolute inset-0">
            <img
              src="/images/beranda/image.pg"
              alt="Madrasah Hebat Bermartabat"
              class="w-full h-full object-cover"
              onerror="this.onerror=null; this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%221200%22 height=%22600%22%3E%3Crect fill=%22%23047857%22 width=%221200%22 height=%22600%22/%3E%3Ctext fill=%22%23fff%22 font-family=%22Arial%22 font-size=%2248%22 x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dominant-baseline=%22middle%22%3EGambar Slide 1%3C/text%3E%3C/svg%3E';"
            />
            <div class="absolute inset-0 bg-gradient-to-r from-green-900/80 via-green-800/50 to-transparent"></div>
          </div>

          <!-- Slide 2 -->
          <div x-show="currentSlide === 1" 
               x-transition:enter="transition ease-out duration-500"
               x-transition:enter-start="opacity-0"
               x-transition:enter-end="opacity-100"
               class="absolute inset-0">
            <img
              src="/images/beranda/image.pg"
              alt="Gambar Madrasah 2"
              class="w-full h-full object-cover"
              onerror="this.onerror=null; this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%221200%22 height=%22600%22%3E%3Crect fill=%22%23059669%22 width=%221200%22 height=%22600%22/%3E%3Ctext fill=%22%23fff%22 font-family=%22Arial%22 font-size=%2248%22 x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dominant-baseline=%22middle%22%3EGambar Slide 2%3C/text%3E%3C/svg%3E';"
            />
            <div class="absolute inset-0 bg-gradient-to-r from-green-900/80 via-green-800/50 to-transparent"></div>
          </div>

          <!-- Slide 3 -->
          <div x-show="currentSlide === 2" 
               x-transition:enter="transition ease-out duration-500"
               x-transition:enter-start="opacity-0"
               x-transition:enter-end="opacity-100"
               class="absolute inset-0">
            <img
              src="/images/beranda/image.pg"
              alt="Gambar Madrasah 3"
              class="w-full h-full object-cover"
              onerror="this.onerror=null; this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%221200%22 height=%22600%22%3E%3Crect fill=%22%2310b981%22 width=%221200%22 height=%22600%22/%3E%3Ctext fill=%22%23fff%22 font-family=%22Arial%22 font-size=%2248%22 x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dominant-baseline=%22middle%22%3EGambar Slide 3%3C/text%3E%3C/svg%3E';"
            />
            <div class="absolute inset-0 bg-gradient-to-r from-green-900/80 via-green-800/50 to-transparent"></div>
          </div>
        </div>

        <!-- Navigation Buttons -->
        <button @click="prevSlide()" 
                class="absolute top-1/2 left-4 transform -translate-y-1/2 bg-white/20 hover:bg-white/40 backdrop-blur-sm text-white p-3 rounded-full transition duration-300 z-10">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </button>
        
        <button @click="nextSlide()" 
                class="absolute top-1/2 right-4 transform -translate-y-1/2 bg-white/20 hover:bg-white/40 backdrop-blur-sm text-white p-3 rounded-full transition duration-300 z-10">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>

        <!-- Slide Indicators -->
        <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 flex space-x-3 z-10">
          <button @click="currentSlide = 0" 
                  :class="currentSlide === 0 ? 'bg-yellow-400 w-8' : 'bg-white/50 w-3'"
                  class="h-3 rounded-full transition-all duration-300"></button>
          <button @click="currentSlide = 1" 
                  :class="currentSlide === 1 ? 'bg-yellow-400 w-8' : 'bg-white/50 w-3'"
                  class="h-3 rounded-full transition-all duration-300"></button>
          <button @click="currentSlide = 2" 
                  :class="currentSlide === 2 ? 'bg-yellow-400 w-8' : 'bg-white/50 w-3'"
                  class="h-3 rounded-full transition-all duration-300"></button>
        </div>
      </div>

      <!-- Grid 3 Kolom Section -->
      <div class="container mx-auto px-4 py-16">
        <!-- Baris Pertama: 3 Kolom -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <!-- Card 1: Kegiatan -->
          <a href="/kegiatan" class="group bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 p-6 border-t-4 border-green-600">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-gray-400 group-hover:text-green-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-bold text-gray-800 mb-2 group-hover:text-green-600 transition-colors">Kegiatan</h3>
                <p class="text-gray-600 text-sm">Kegiatan madrasah selama masa pandemi Covid-19</p>
              </div>
            </div>
          </a>

          <!-- Card 2: Raihan Prestasi -->
          <a href="/prestasi" class="group bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 p-6 border-t-4 border-yellow-500">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-gray-400 group-hover:text-yellow-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-bold text-gray-800 mb-2 group-hover:text-yellow-500 transition-colors">Raihan Prestasi</h3>
                <p class="text-gray-600 text-sm">Beragam prestasi dan penghargaan yang diraih</p>
              </div>
            </div>
          </a>

          <!-- Card 3: Fasilitas -->
          <a href="/fasilitas" class="group bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 p-6 border-t-4 border-blue-600">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-bold text-gray-800 mb-2 group-hover:text-blue-600 transition-colors">Fasilitas</h3>
                <p class="text-gray-600 text-sm">Fasilitas yang disediakan untuk mendukung kegiatan belajar mengajar</p>
              </div>
            </div>
          </a>
        </div>

        <!-- Baris Kedua: 3 Kolom -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Card 4: Ekstrakulikuler -->
          <a href="/ekstrakurikuler" class="group bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 p-6 border-t-4 border-purple-600">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-gray-400 group-hover:text-purple-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-bold text-gray-800 mb-2 group-hover:text-purple-600 transition-colors">Ekstrakulikuler</h3>
                <p class="text-gray-600 text-sm">Ekstrakulikuler MA Mu'allimin Mu'allimat Rembang</p>
              </div>
            </div>
          </a>

          <!-- Card 5: PPDB 2024/2025 -->
         

          <!-- Card 6: Kabar Madrasah -->
          <a href="/kabar-madrasah" class="group bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 p-6 border-t-4 border-teal-600">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-gray-400 group-hover:text-teal-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-bold text-gray-800 mb-2 group-hover:text-teal-600 transition-colors">Kabar Madrasah</h3>
                <p class="text-gray-600 text-sm">Kabar acara dan kegiatan madrasah</p>
              </div>
            </div>
          </a>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>

    <script>
      function slider() {
        return {
          currentSlide: 0,
          totalSlides: 3,
          interval: null,
          
          init() {
            this.startAutoSlide();
          },
          
          nextSlide() {
            this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
            this.resetAutoSlide();
          },
          
          prevSlide() {
            this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
            this.resetAutoSlide();
          },
          
          startAutoSlide() {
            this.interval = setInterval(() => {
              this.nextSlide();
            }, 5000);
          },
          
          resetAutoSlide() {
            clearInterval(this.interval);
            this.startAutoSlide();
          }
        }
      }
    </script>
  </body>
</html>