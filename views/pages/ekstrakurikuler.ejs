        ],
        get filteredEkskul() {
          if (this.selectedCategory === 'semua') { return this.ekskul; }
          return this.ekskul.filter(e => e.category === this.selectedCategory);
        }
      }">
        <div class="container mx-auto px-4">
          <!-- Filter Categories -->
          <div class="flex flex-wrap justify-center gap-3 mb-12">
            <button @click="selectedCategory = 'semua'" :class="selectedCategory === 'semua' ? 'bg-gradient-to-r from-green-600 to-emerald-600 text-white shadow-lg scale-105' : 'bg-white text-gray-700 hover:bg-green-50 hover:shadow-md'" class="px-6 py-3 rounded-full font-bold transition-all duration-300 transform hover:scale-105">Semua</button>
            <button @click="selectedCategory = 'keagamaan'" :class="selectedCategory === 'keagamaan' ? 'bg-gradient-to-r from-green-600 to-emerald-600 text-white shadow-lg scale-105' : 'bg-white text-gray-700 hover:bg-green-50 hover:shadow-md'" class="px-6 py-3 rounded-full font-bold transition-all duration-300 transform hover:scale-105">Keagamaan</button>
            <button @click="selectedCategory = 'olahraga'" :class="selectedCategory === 'olahraga' ? 'bg-gradient-to-r from-green-600 to-emerald-600 text-white shadow-lg scale-105' : 'bg-white text-gray-700 hover:bg-green-50 hover:shadow-md'" class="px-6 py-3 rounded-full font-bold transition-all duration-300 transform hover:scale-105">Olahraga</button>
            <button @click="selectedCategory = 'seni'" :class="selectedCategory === 'seni' ? 'bg-gradient-to-r from-green-600 to-emerald-600 text-white shadow-lg scale-105' : 'bg-white text-gray-700 hover:bg-green-50 hover:shadow-md'" class="px-6 py-3 rounded-full font-bold transition-all duration-300 transform hover:scale-105">Seni & Budaya</button>
            <button @click="selectedCategory = 'akademik'" :class="selectedCategory === 'akademik' ? 'bg-gradient-to-r from-green-600 to-emerald-600 text-white shadow-lg scale-105' : 'bg-white text-gray-700 hover:bg-green-50 hover:shadow-md'" class="px-6 py-3 rounded-full font-bold transition-all duration-300 transform hover:scale-105">Akademik</button>
            <button @click="selectedCategory = 'teknologi'" :class="selectedCategory === 'teknologi' ? 'bg-gradient-to-r from-green-600 to-emerald-600 text-white shadow-lg scale-105' : 'bg-white text-gray-700 hover:bg-green-50 hover:shadow-md'" class="px-6 py-3 rounded-full font-bold transition-all duration-300 transform hover:scale-105">Teknologi</button>
            <button @click="selectedCategory = 'bela negara'" :class="selectedCategory === 'bela negara' ? 'bg-gradient-to-r from-green-600 to-emerald-600 text-white shadow-lg scale-105' : 'bg-white text-gray-700 hover:bg-green-50 hover:shadow-md'" class="px-6 py-3 rounded-full font-bold transition-all duration-300 transform hover:scale-105">Bela Negara</button>
          </div>

          <!-- Ekskul Cards Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            <template x-for="item in filteredEkskul" :key="item.id">
              <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
                <div class="relative h-56 overflow-hidden bg-gradient-to-br from-green-100 to-emerald-100">
                  <img :src="item.image" :alt="item.name" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                  <div class="absolute inset-0 bg-gradient-to-t from-green-900/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  <div class="absolute top-4 right-4 bg-gradient-to-r from-green-600 to-emerald-600 text-white px-4 py-2 rounded-full font-bold text-sm shadow-lg">
                    <span x-text="item.category.charAt(0).toUpperCase() + item.category.slice(1)"></span>
                  </div>
                  <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm p-3 rounded-full shadow-lg transform scale-0 group-hover:scale-100 transition-transform duration-300">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" :d="item.icon"></path>
                    </svg>
                  </div>
                </div>
                <div class="p-6">
                  <div class="flex items-center mb-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-600 rounded-lg flex items-center justify-center mr-3 shadow-md">
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" :d="item.icon"></path>
                      </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 group-hover:text-green-600 transition-colors" x-text="item.name"></h3>
                  </div>
                  <p class="text-gray-600 leading-relaxed mb-4" x-text="item.description"></p>
                  <div class="h-1 w-0 group-hover:w-full bg-gradient-to-r from-green-600 to-emerald-600 rounded-full transition-all duration-500"></div>
                </div>
              </div>
            </template>
          </div>
        </div>
      </section>

      <!-- Stats Section -->
      <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="text-center bg-gradient-to-br from-green-500 to-emerald-600 text-white p-8 rounded-2xl shadow-xl transform transition-all duration-500 hover:scale-105">
              <div class="text-4xl md:text-5xl font-bold mb-2">13</div>
              <div class="text-sm md:text-base text-green-100">Total Ekstrakurikuler</div>
            </div>
            <div class="text-center bg-gradient-to-br from-blue-500 to-blue-600 text-white p-8 rounded-2xl shadow-xl transform transition-all duration-500 hover:scale-105">
              <div class="text-4xl md:text-5xl font-bold mb-2">3</div>
              <div class="text-sm md:text-base text-blue-100">Kategori Keagamaan</div>
            </div>
            <div class="text-center bg-gradient-to-br from-purple-500 to-purple-600 text-white p-8 rounded-2xl shadow-xl transform transition-all duration-500 hover:scale-105">
              <div class="text-4xl md:text-5xl font-bold mb-2">2</div>
              <div class="text-sm md:text-base text-purple-100">Olahraga</div>
            </div>
            <div class="text-center bg-gradient-to-br from-yellow-500 to-orange-500 text-white p-8 rounded-2xl shadow-xl transform transition-all duration-500 hover:scale-105">
              <div class="text-4xl md:text-5xl font-bold mb-2">5</div>
              <div class="text-sm md:text-base text-yellow-100">Kategori Lainnya</div>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
    
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>