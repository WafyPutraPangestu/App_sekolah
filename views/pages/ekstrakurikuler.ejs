          { id: 7, name: 'Futsal', category: 'olahraga', description: 'Melatih kerjasama tim dan sportivitas melalui olahraga futsal', image: '/images/ekstrakurikuler/futsal.jpg', icon: 'M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z' },
          { id: 8, name: 'Silat', category: 'olahraga', description: 'Beladiri tradisional untuk membentuk mental dan fisik yang kuat', image: '/images/ekstrakurikuler/silat.jpg', icon: 'M13 10V3L4 14h7v7l9-11h-7z' },
          { id: 9, name: 'Hadroh', category: 'seni', description: 'Seni musik islami dengan rebana dan syair-syair pujian', image: '/images/galeri/foto-sholawatan4.jpg', icon: 'M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3' },
          { id: 10, name: 'Marawis', category: 'seni', description: 'Seni musik tradisional islami menggunakan alat musik rebana', image: '/images/ekstrakurikuler/hadroh.jpg', icon: 'M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3' },
          { id: 11, name: 'English Club', category: 'akademik', description: 'Meningkatkan kemampuan bahasa Inggris melalui aktivitas yang menyenangkan', image: 'https://images.unsplash.com/photo-1546410531-bb4caa6b424d?w=600&h=400&fit=crop', icon: 'M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129' },
