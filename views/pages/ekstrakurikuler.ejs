        x-data="{ 
        selectedCategory: 'semua',
        ekskul: [
          { id: 1, name: 'Tahfidz Al-Quran', category: 'keagamaan', description: 'Program menghafal Al-Quran dengan metode yang mudah dan menyenangkan', image: '/images/ekstrakurikuler/tahfiz.jpg', icon: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253' },
          { id: 2, name: 'ROHIS', category: 'keagamaan', description: 'Kerohanian Islam untuk memperdalam ilmu agama dan dakwah', image: 'images/ekstrakurikuler/rohis.jpg', icon: 'M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z' },
