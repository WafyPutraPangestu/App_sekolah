                    <div class="flex items-center mb-3">
                      <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-600 rounded-lg flex items-center justify-center mr-3 shadow-md">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" :d="facility.icon"></path>
                        </svg>
                      </div>
                      <h3 
                        class="text-xl font-bold text-gray-800 group-hover:text-green-600 transition-colors" 
                        x-text="facility.name"
                      ></h3>
                    </div>
                    <p 
                      class="text-gray-600 leading-relaxed" 
                      x-text="facility.description"
                    ></p>
                    <!-- Decorative Line -->
                    <div class="mt-4 h-1 w-0 group-hover:w-full bg-gradient-to-r from-green-600 to-emerald-600 rounded-full transition-all duration-500"></div>
                  </div>
                </div>
              </template>
